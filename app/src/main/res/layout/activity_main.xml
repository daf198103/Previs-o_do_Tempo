<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:background="@drawable/fundo"
    android:layout_height="fill_parent">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aluno.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d1c1f2"
        android:textSize="18sp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:text="PREVISÃƒO DO TEMPO"/>


    <EditText
        android:id="@+id/City"
        android:entries="@string/cidade"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp">
    </EditText>

    <EditText
        android:id="@+id/Estado"
        android:entries="@string/estado"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/City"
        android:layout_below="@id/City">
    </EditText>

    <Button
        android:id="@+id/buttonSearch"
        android:text="@string/textButtonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/City"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:layout_below="@id/Estado"
        android:onClick="buscar">
    </Button>

    <TextView android:id="@+id/result"
        android:text="@string/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:background="#f3f0f9"
        android:layout_below="@+id/buttonSearch"
        android:layout_alignParentLeft="@+id/buttonSearch">
    </TextView>

</RelativeLayout>
</ScrollView>